
<div class='page-header'>
  <h1> Products</h1>
</div>

<%= link_to "New Product", new_product_path %>
<br>
<br>
<br>
<table class="table table-striped">
  <tr>
      <th>Name</th>
      <th> Price</th>
      <th>Company</th>
      <th></th>
  </tr>
      <tbody>
        <% @products.each do |product| %>
          <tr>
              <td><%=product.name %> </td>
              <td>$<%=product.price.round(2) %></td>
              <td> <%= link_to product.company.name, company_path(product) %></td>
              <td> <%= link_to "Review a Product", new_product_product_review_path(product) %></td>
         </tr>
            <% end %>
      </tbody>
</table>
